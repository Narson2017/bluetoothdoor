<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="CustomTheme" parent="android:Theme.Light">
        <item name="android:windowBackground">@color/custom_theme_color</item>
        <item name="android:colorBackground">@color/custom_theme_color</item>
    </style>

    <style name="LightTheme" parent="@android:style/Theme.Light"></style>

    <style name="BlackTheme" parent="@android:style/Theme.Black"></style>

    <style name="box_nbr">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">24dp</item>
    </style>

    <style name="text_hint">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="login_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="box_lst_nbr">
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20dp</item>
    </style>

    <style name="box_lst_msg">
        <item name="android:textColor">@color/grey</item>
    </style>

    <color name="btn_login_color">#66FF00</color>

    <style name="btn_login">
        <item name="android:textColor">@color/white</item>
        <item name="android:typeface">serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">13dp</item>
        <item name="android:background">@drawable/btn_entrance</item>
    </style>

    <style name="edit_password">
        <item name="android:inputType">numberPassword</item>
        <item name="android:maxLength">6</item>
    </style>

    <style name="input_username">
        <item name="android:maxLength">16</item>
        <item name="android:inputType">number</item>
    </style>

</resources>