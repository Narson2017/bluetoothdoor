<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.park.bluetooth"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" />

    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:icon="@drawable/icon"
        android:label="@string/company_name"
        android:theme="@android:style/Theme.Light" >
        <activity
            android:name="org.park.bluetooth.splashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.park.bluetooth.MyBlueTooth"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="org.park.bluetooth.showDetail"
            android:launchMode="singleTask" >
        </activity>
        <activity
            android:name="org.park.authorize.LoginActivity"
            android:launchMode="singleTask" >
        </activity>
        <activity android:name="org.park.prefs.settingActivity" />
        <activity
            android:name="org.park.devlist.DevlstActivity"
            android:launchMode="singleTask" />
    </application>

</manifest>